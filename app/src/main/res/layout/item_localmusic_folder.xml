<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_folder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="12dp"
        android:src="@drawable/scan_icn_folder"/>

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_folder"
        android:layout_toStartOf="@+id/iv_more_folderFragment">
        <TextView
            android:id="@+id/tv_folder_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Gamersky-NFS17.Most.Wanted_2012.Soundtrack"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="bottom"
            android:textSize="15sp"
            android:textColor="@color/itemMain" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_number_of_track_folderFragment"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:text="1é¦–"
                android:paddingTop="3dp"
                android:gravity="top"
                android:textSize="10dp"
                android:textColor="@color/itemSubMain"/>
            <TextView
                android:id="@+id/tv_path_folderFragment"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="/storage/extSdCard/downloads"
                android:maxLines="1"
                android:paddingTop="3dp"
                android:gravity="top"
                android:textSize="10dp"
                android:textColor="@color/itemSubMain"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more_folderFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/list_icn_more"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingTop="22dp"
        android:paddingBottom="22dp" />

</RelativeLayout>