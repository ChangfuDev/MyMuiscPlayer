<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="113dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_albumArt_Notification"
        android:layout_width="113dp"
        android:layout_height="match_parent"
        android:src="@drawable/banshouren"
        android:scaleType="fitCenter"
        android:gravity = "center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.95"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingTop="9dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tv_audio_title_notification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="第五期-趣说古代婚姻制度(下)"/>
                <ImageView
                    android:id="@+id/iv_close_notification"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/play_playlist_icn_delete" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                android:paddingEnd="30dp"
                android:paddingStart="0dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_artist_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:maxLines="1"
                    android:textColor="@color/notificationSubTitle"
                    android:text="ＬＹˇ儿歌大赛ˇ‖主持‖Allan"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/slash_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tv_artist_notification"
                    android:layout_marginEnd="2dp"
                    android:maxLines="1"
                    android:textColor="@color/notificationSubTitle"
                    android:text="-"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_album_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/slash_notification"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/notificationSubTitle"
                    android:text="YY频道 - 138829"
                    android:textSize="19sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="#eeeeee"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:layout_weight="1"
                android:src="@drawable/note_btn_love_white" />
            <ImageView
                android:id="@+id/iv_pre"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:layout_weight="1"
                android:src="@drawable/note_btn_pre_white" />
            <ImageView
                android:id="@+id/iv_pause_play_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_weight="1"
                android:src="@drawable/note_btn_pause_white" />
            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:layout_weight="1"
                android:src="@drawable/note_btn_next_white" />
            <ImageView
                android:id="@+id/iv_lyc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:layout_weight="1"
                android:src="@drawable/note_btn_lyc_white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>