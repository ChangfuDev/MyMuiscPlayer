<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_albumArt_albumFragment"
        android:layout_width="61dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:paddingEnd="11dp"
        android:background="@drawable/list_cover_alb"
        fresco:placeholderImage="@drawable/placeholder_disk_380"/>

    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_albumArt_albumFragment"
        android:layout_toStartOf="@+id/iv_more_albumFragment">
        <TextView
            android:id="@+id/tv_albumName_albumFragment"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="阿岳正传"
            android:maxLines="1"

            android:gravity="bottom"
            android:textSize="12dp"
            android:textColor="@color/itemMain" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_number_of_track_albumFragment"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:text="1首"
                android:paddingTop="3dp"
                android:gravity="top"
                android:textSize="10dp"
                android:textColor="@color/itemSubMain"/>
            <TextView
                android:id="@+id/tv_artistName_albumFragment"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="张震岳"
                android:maxLines="1"
                android:paddingTop="3dp"
                android:gravity="top"
                android:textSize="10dp"
                android:textColor="@color/itemSubMain"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more_albumFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/list_icn_more"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingTop="22dp"
        android:paddingBottom="22dp" />

</RelativeLayout>